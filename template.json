{
    "variables": {
        "url": "http://download.bring.out.ba/greenbox-{{user `version`}}.iso",
        "checksum": "d042d7080b886acef56a4de039b7485e78f55022d4a27aa19310f0e0d815f8eb",
        "checksum_type": "sha256",
        "headless": "true",
        "box_basename": "greenbox",
        "template": "greenbox"
    },

    "builders": [{
        "type": "virtualbox-iso",
        "vboxmanage": [
            ["modifyvm","{{.Name}}","--memory","1024"],
            ["modifyvm","{{.Name}}","--nictype1","virtio"]
         ],
        "guest_additions_mode": "disable",
        "virtualbox_version_file": "",
        "disk_size": "120000",
        "iso_url": "{{user `url`}}",
        "iso_checksum": "{{user `checksum`}}",
        "iso_checksum_type": "{{user `checksum_type`}}",
        "headless" : "{{ user `headless`}}",
        "boot_wait": "2m30s",
        "guest_os_type": "Linux_64",
        "ssh_username": "docker",
        "ssh_password": "test01",
        "output_directory": "packer-{{user `template`}}-virtualbox",
        "vm_name": "{{ user `template` }}",
        "shutdown_command": "sudo poweroff"
    }],

    "provisioners": [
      {
       "type": "shell-local",
       "command": "chmod +x ./download.sh && ./download.sh '{{user `url`}}' {{user `checksum`}}"
      },
      {
        "type":   "shell",
         "inline": [ "sudo chown docker:docker -R /home/docker", "sudo zfs list", "echo 'Hello World!'" ]
      },
      {
      "type": "shell",
      "inline": [ "echo 'end'" ]
      }
     ],

    "post-processors": [[{
        "output": "builds/{{user `box_basename`}}.{{.Provider}}.box",
        "type": "vagrant",
        "include": [ "greenbox.iso" ],
        "vagrantfile_template": "vagrantfile.tpl",
        "output": "greenbox_{{.Provider}}.box"
    }]]

}
