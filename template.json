{
    "variables": {
        "url": "http://download.bring.out.ba/greenbox-4.1.0.iso",
        "checksum": "52c6849b59a835022be8bcadb7012f36903aaee9b97ba693e8976317dd6579f9",
        "checksum_type": "sha256",
        "version": "4.1.0",
        "headless": "true",
        "template": "greenbox"
    },

    "builders": [{
        "type": "virtualbox-iso",
        "vboxmanage": [
            ["modifyvm","{{.Name}}","--memory","1536"],
            ["modifyvm","{{.Name}}","--nictype1","virtio"]
         ],
        "disk_size": "120000",
        "iso_url": "{{user `url`}}",
        "iso_checksum": "{{user `checksum`}}",
        "iso_checksum_type": "{{user `checksum_type`}}",
        "headless" : "{{ user `headless`}}",
        "boot_wait": "5s",
        "guest_additions_mode": "disable",
        "guest_additions_path": "disable",
        "guest_os_type": "Linux_64",
        "ssh_username": "docker",
        "ssh_password": "test01",
        "output_directory": "packer-{{user `template`}}-virtualbox",
        "shutdown_command": "sudo poweroff"
    }],

    "provisioners": [
      {
       "type": "shell-local",
       "command": "chmod +x ./download.sh && ./download.sh '{{user `url`}}' {{user `checksum`}}"
      },
      {
        "type":   "shell",
         "inline": [ "echo 'Hello World!'", "sleep 10"]
      }, 
      {
      "type": "shell",
      "inline": [
          "mkfs.ext4 -F -L boot2docker-data /dev/sda",
          "sudo mkdir /mnt/sda",
          "sudo mount /dev/sda /mnt/sda",
          "sudo mkdir -p /mnt/sda/var/lib/boot2docker",
          "sudo echo 'export DOCKER_TLS=no' > /tmp/profile",
          "sudo mv /tmp/profile /mnt/sda/var/lib/boot2docker/profile",
          "sudo chown root:root /mnt/sda/var/lib/boot2docker/profile",
          "sync"
      ]}
     ],

    "post-processors": [[{
        "type": "vagrant",
        "include": ["greenbox.iso"],
        "vagrantfile_template": "vagrantfile.tpl",
        "output": "greenbox_{{.Provider}}.box"
    }]]

}
