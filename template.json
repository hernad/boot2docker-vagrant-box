{
    "variables": {
        "url": "http://download.bring.out.ba/greenbox-4.1.0.iso",
        "checksum": "52c6849b59a835022be8bcadb7012f36903aaee9b97ba693e8976317dd6579f9",
        "checksum_type": "sha256",
        "version": "4.1.0",
        "headless": "true",
        "box_basename": "greenbox",
        "template": "greenbox"
    },

    "builders": [{
        "type": "virtualbox-iso",
        "vboxmanage": [
            ["modifyvm","{{.Name}}","--memory","1536"],
            ["modifyvm","{{.Name}}","--nictype1","virtio"]
         ],
        "disk_size": "120000",
        "iso_url": "{{user `url`}}",
        "iso_checksum": "{{user `checksum`}}",
        "iso_checksum_type": "{{user `checksum_type`}}",
        "headless" : "{{ user `headless`}}",
        "boot_wait": "3m30s",
        "guest_os_type": "Linux_64",
        "ssh_username": "docker",
        "ssh_password": "test01",
        "output_directory": "packer-{{user `template`}}-virtualbox",
        "vm_name": "{{ user `template` }}",
        "virtualbox_version_file": ".vbox_version",
        "shutdown_command": "sudo poweroff"
    }],

    "provisioners": [
      {
       "type": "shell-local",
       "command": "chmod +x ./download.sh && ./download.sh '{{user `url`}}' {{user `checksum`}}"
      },
      {
        "type":   "shell",
         "inline": [ "echo 'Hello World!'"]
      }, 
      {
      "type": "shell",
      "inline": [ "echo 'end'" ]
      }
     ],

    "post-processors": [[{
        "output": "builds/{{user `box_basename`}}.{{.Provider}}.box",
        "type": "vagrant",
        "include": [ "greenbox.iso" ],
        "vagrantfile_template": "vagrantfile.tpl",
        "output": "greenbox_{{.Provider}}.box"
    }]]

}
